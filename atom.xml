---
layout: nil
---
<?xml version="1.0" encoding="utf-8"?>
<feed xmlns="http://www.w3.org/2005/Atom">
 
 <title>Marcelo Andrade's Blog</title>
 <link href="http://marceloandrader.github.com/atom.xml" rel="self"/>
 <link href="http://marceloandrader.github.com/"/>
 <updated>{{ site.time | date_to_xmlschema }}</updated>
 <id>http://marceloandrader.github.com/</id>
 <author>
   <name>Marcelo Andrade</name>
   <email>marcelo.andrade.r@gmail.com</email>
 </author>
 
 {% for post in site.posts %}
 <entry>
   <title>{{ post.title | xml_escape }}</title>
   <link href="http://marceloandrader.github.com{{ post.url }}"/>
   <updated>{{ post.date | date_to_xmlschema }}</updated>
   <id>http://marceloandrader.github.com{{ post.id }}</id>
   <content type="html">
		{% if post.teaser %}
 			<p>{{ post.teaser  }}</p>
 			<p><a href="{{post.url}}">Read whole post.</a></p>
		{% else %}
			{{ post.content  }}
		{% endif %}</content>
 </entry>
 {% endfor %}
 
</feed>